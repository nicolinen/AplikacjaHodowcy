@model IEnumerable<AplikacjaHodowcy.Models.Szczeniak>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap">
    <link rel="stylesheet" href="/css/mainLayout.css">
</head>
<body>

    <h1 class="header-create">
        <span>Szczeniaki </span>

        @if (User.Identity.IsAuthenticated)
        {
            <span class="arrow">&#10148;</span>
            <span class="add-create">
                <a asp-action="Create">Dodaj szczeniaka</a>
            </span>
        }
    </h1>

<div class="table-container">
        <table class="table">
    <thead class="table-header" >
        <tr>
                    <th class="table-color">
                @Html.DisplayNameFor(model => model.Name)
                    </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Miot.NazwaMiotu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoUrl)
            </th>
            <th></th>
        </tr>
    </thead>


    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
            <td>
                @Html.DisplayFor(modelItem => item.Miot.NazwaMiotu)
            </td>
            <td>
                <img id="PuppyPhoto" src="~/images/@item.PhotoUrl" width="100" height="100" />
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                <a asp-action="Edit" asp-route-id="@item.Id">Edycja</a> 
                    }|
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                    @if (User.Identity.IsAuthenticated)
                    {
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
</div>

</body>
</html>
