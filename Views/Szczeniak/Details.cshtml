@model AplikacjaHodowcy.Models.Szczeniak

@{
    ViewData["Title"] = "Create";
}

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap">
    <link rel="stylesheet" href="/css/mainLayout.css">

<h1>Szczegóły</h1>

<h4>Szczeniak</h4>
<hr />
<div class="row">
    <div class="col-md-4">

            <input type="hidden" asp-for="Id"/>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control form-control-plaintext" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control form-control-lg" rows="5" style="width: 100%;" readonly></textarea>
            </div>
        <div class="form-group">
            <label asp-for="BirthDate" class="control-label"></label>
            <input asp-for="BirthDate" class="form-control form-control-plaintext" readonly />
        </div>
            <div class="form-group">
                <label asp-for="LiniaId" class="control-label"></label>
            <input asp-for="@Model.Miot.Linia.Name" class="form-control form-control-plaintext" readonly />
            </div>

            <div class="form-group">
                <label asp-for="MiotId" class="control-label"></label>
            <input asp-for="@Model.Miot.LitterName" class="form-control form-control-plaintext" readonly />
            </div>


            <div class="form-group">
        @if (User.Identity.IsAuthenticated)
            {
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
            }
            </div>

        <div class="form-group">
            <a class="btn btn-primary" asp-controller="SendMail" asp-action="SendMail">Zarezerwuj</a>
            </div>

            <div class="form-group pt-0 mt-0">
                <div ID="HiddenDiv" style="visibility: hidden;">
                <input asp-for="PhotoUrl" id="PhotoUrl form-control-plaintext" readonly />
                </div>
            </div>

        <div>
            <a asp-action="Index" class="custom-link">Wróć do listy</a>
        </div>
    </div>
  
    <div class="col-md-6">
         <div class="col-md-4 text-right">
                <label asp-for="PuppyPhoto" class="control-label"></label>
                <img src="~/images/@Model.PhotoUrl" alt="Logo Image"
                    width="250" height="250" />

         </div>
         </div>
    <div class="col-1 p-0">
    </div>
</div>

<!--<div>
    <a asp-action="Index">Wróć do listy</a>
</div> -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <!-- ajax call jako funkcja -->
    <script type="text/javascript">

    </script>

}
