@model AplikacjaHodowcy.Models.SendMail

@{
    ViewData["Title"] = "Wyślij wiadomość";
}

<h1>@ViewBag.Message</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="From"></label>
        <input type="email" asp-for="From" class="form-control" placeholder="Twój adres e-mail">
        <span class="text-danger" asp-validation-for="From"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Hasło">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="To"></label>
        <input type="email" asp-for="To" class="form-control" value="nikola.niestroj@gmail.com">
        <span class="text-danger" asp-validation-for="To"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject"></label>
        <input type="text" asp-for="Subject" class="form-control" placeholder="@ViewBag.SzczeniakName">
        <span class="text-danger" asp-validation-for="Subject"></span>
    </div>
    <div class="form-group">
        <label asp-for="Body"></label>
        <textarea asp-for="Body" class="form-control" placeholder="Treść wiadomości" rows="5" cols="50"></textarea>
        <span class="text-danger" asp-validation-for="Body"></span>
    </div>
    <button type="submit" class="btn btn-primary">Wyślij</button>

</form>
