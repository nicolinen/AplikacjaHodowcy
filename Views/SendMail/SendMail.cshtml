@model AplikacjaHodowcy.Models.SendMail

@{
    ViewData["Title"] = "Send Mail";
}

<h1>@ViewBag.Message</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="From"></label>
        <input type="email" asp-for="From" class="form-control" placeholder="Enter your email">
        <span class="text-danger" asp-validation-for="From"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter your email password">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="To"></label>
        <input type="email" asp-for="To" class="form-control" placeholder="Enter the recipient's email">
        <span class="text-danger" asp-validation-for="To"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject"></label>
        <input type="text" asp-for="Subject" class="form-control" placeholder="Enter the email subject">
        <span class="text-danger" asp-validation-for="Subject"></span>
    </div>
    <div class="form-group">
        <label asp-for="Body"></label>
        <textarea asp-for="Body" class="form-control" placeholder="Enter the email body"></textarea>
        <span class="text-danger" asp-validation-for="Body"></span>
    </div>
    <button type="submit" class="btn btn-primary">Send Email</button>
</form>
