@model AplikacjaHodowcy.Models.Miot

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj</h1>

<h4>Miot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ImieMatki" class="control-label"></label>
                <input asp-for="ImieMatki" class="form-control" />
                <span asp-validation-for="ImieMatki" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImieOjca" class="control-label"></label>
                <input asp-for="ImieOjca" class="form-control" />
                <span asp-validation-for="ImieOjca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpisRodzicow" class="control-label"></label>
                <input asp-for="OpisRodzicow" class="form-control" />
                <span asp-validation-for="OpisRodzicow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NazwaMiotu" class="control-label"></label>
                <input asp-for="NazwaMiotu" class="form-control" />
                <span asp-validation-for="NazwaMiotu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LiniaId" class="control-label"></label>
                <select asp-for="LiniaId" class="form-control" asp-items="ViewBag.Linie"></select>
                <span asp-validation-for="LiniaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="photoFile">Wybierz plik</label>
                <input type="file" class="form-control-file" id="photoFile" name="PhotoFile" onchange="updatePhotoPath(this)">
                <span asp-validation-for="PhotoPath" class="text-danger"></span>
            </div>
            <input type="hidden" id="photoPath" name="PhotoPath">
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
