@model AplikacjaHodowcy.Models.Miot

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap">
    <link rel="stylesheet" href="/css/mainLayout.css">
</head>

<h1>Usuń</h1>

<h3>Czy na pewno chcesz usunąć poniższy miot?</h3>
<div>
    <h4>Miot</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImieMatki)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImieMatki)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImieOjca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImieOjca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OpisRodzicow)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OpisRodzicow)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NazwaMiotu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NazwaMiotu)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Linia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Linia.Nazwa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index" class="custom-link">Wróć do listy</a>
    </form>
</div>
