@model AplikacjaHodowcy.Models.Miot

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Miot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImieMatki" class="control-label"></label>
                <input asp-for="ImieMatki" class="form-control" />
                <span asp-validation-for="ImieMatki" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImieOjca" class="control-label"></label>
                <input asp-for="ImieOjca" class="form-control" />
                <span asp-validation-for="ImieOjca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NazwaMiotu" class="control-label"></label>
                <input asp-for="NazwaMiotu" class="form-control" />
                <span asp-validation-for="NazwaMiotu" class="text-danger"></span>
            </div>
            <div class="form-group btn-group col-12">
                <div class="col-11">
                    <label asp-for="LiniaId" class="control-label"></label>
                    <select id="linie" asp-for="LiniaId"   class="form-control" asp-items="ViewBag.Linie"
                            onchange="UzupelnijMioty(this,'listaMioty');"></select>
                </div>
            <div class="cold-1 mt-4">
                <button class="btn btn-success" onclick="ShowLiniaCreateModal();">
                    +
                </button>
            </div>
            </div>
             <div id="DivCreateDialog"></div>
                 <div class="form-group">
                <input type="submit" value="Stwórz Nowy miot" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- ajax call jako funkcja -->
<script type="text/javascript">

    function ShowLiniaCreateModal() {
        $.ajax(
            {
                url: "/linia/CreateModalForm",
                type: 'get',
                success: function (response) {
                    $("#DivCreateDialog").html(response);
                    ShowCreateModalForm();
                }
            });
        return;
    }

</script>
