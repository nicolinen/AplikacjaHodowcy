@model AplikacjaHodowcy.Models.Linia

<h4>Linia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateModalForm" data-ajax="true" data-ajax-success="refreshLiniaList();">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa"  class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis"  class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <input id="btnSubmit" type="submit" value="Dodaj brakującą linię" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
