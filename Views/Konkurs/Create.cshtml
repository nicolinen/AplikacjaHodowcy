@model AplikacjaHodowcy.Models.Konkurs

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj konkurs</h1>

<form asp-action="Create" method="post" id="konkursForm">
    <div class="form-group">
        <label>Type:</label>
        <select id="typeSelect" class="form-control" name="Type">
            <option value="Krajowy">Krajowy</option>
            <option value="Miedzynarodowy">Międzynarodowy</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Nazwa:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Opis:</label>
        <textarea asp-for="Desription" class="form-control"></textarea>
        <span asp-validation-for="Desription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="photoFile">Wybierz zdjęcie:</label>
        <input type="file" class="form-control-file" id="photoFile" name="PhotoFile" onchange="updatePhotoPath(this)">
        <span asp-validation-for="PhotoPath" class="text-danger"></span>
    </div>
    <input type="hidden" id="photoPath" name="PhotoPath">

    <div id="additionalFields"></div>

    <button type="submit" class="btn btn-primary">Dodaj</button>
</form>

@section Scripts {
    <script>

        function updatePhotoPath(input) {
            var photoPathInput = document.getElementById('photoPath');
            photoPathInput.value = input.value.split(/(\\|\/)/g).pop(); // Pobiera nazwę pliku po ostatnim znaku \ lub / -> regex
        }

        $('#typeSelect').change(function () {
            var type = $(this).val();
            $('#additionalFields').empty();
            if (type === 'Krajowy') {
                $('#additionalFields').append('<div class="form-group"><label>Krajowe Regulacje:</label><input type="text" class="form-control" name="KrajoweRegulacje" /><span class="text-danger"></span></div>');
            } else if (type === 'Miedzynarodowy') {
                $('#additionalFields').append('<div class="form-group"><label>Kraj:</label><input type="text" class="form-control" name="Kraj" /><span class="text-danger"></span></div>');
            }
        });
    </script>
}
