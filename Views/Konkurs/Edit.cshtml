            </div>
            <div class="form-group">
                <label asp-for="Desription" class="control-label"></label>
                <input asp-for="Desription" class="form-control" />
                <span asp-validation-for="Desription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoPath" class="control-label"></label>
                <input asp-for="PhotoPath" class="form-control" />
                <span asp-validation-for="PhotoPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
